@model OrderViewModel

<h2 class="text-center">Order</h2>


<hr />

<div class="container">
    <div class="row">
        @if(Model?.LaptopToOrder.Id>=0)
        {
            <div class="col-md-10">
                <h5 class="text-center">You have selected the following Laptop.</h5>
                <div class="row">
                    <div class="col-md-4">
                    <h5>@Model.LaptopToOrder.Brand @Model.LaptopToOrder.ModelName </h5>
                        <img src="~/Images/@Model.LaptopToOrder.Image" alt="@Model.LaptopToOrder.ModelName" />
                    </div>
                    <div class="col-md-4">
                    <h4>Price: ₹ @Model.LaptopToOrder.Price</h4>
                    </div>
                </div>
            </div>


            <div class="col-md-8">
                <form asp-action="Order">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <input asp-for="BookId" class="form-control" />
                <span asp-validation-for="BookId" class="text-danger"></span>
                </div>*@
                    <div class="form-group">
                        <label asp-for="@Model.OrderDetails.ClientName" class="control-label"></label>
                        <input asp-for="@Model.OrderDetails.ClientName" class="form-control" />
                        <span asp-validation-for="@Model.OrderDetails.ClientName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderDetails.Street" class="control-label"></label>
                        <input asp-for="@Model.OrderDetails.Street" class="form-control" />
                        <span asp-validation-for="@Model.OrderDetails.Street" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderDetails.City" class="control-label"></label>
                        <input asp-for="@Model.OrderDetails.City" class="form-control" />
                        <span asp-validation-for="@Model.OrderDetails.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderDetails.State" class="control-label"></label>
                        <input asp-for="@Model.OrderDetails.State" class="form-control" />
                        <span asp-validation-for="@Model.OrderDetails.State" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderDetails.Country" class="control-label"></label>
                        <input asp-for="@Model.OrderDetails.Country" class="form-control" />
                        <span asp-validation-for="@Model.OrderDetails.Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderDetails.Zip" class="control-label"></label>
                        <input asp-for="@Model.OrderDetails.Zip" class="form-control" />
                        <span asp-validation-for="@Model.OrderDetails.Zip" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderDetails.Phone" class="control-label"></label>
                        <input asp-for="@Model.OrderDetails.Phone" class="form-control" />
                        <span asp-validation-for="@Model.OrderDetails.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderDetails.Email" class="control-label"></label>
                        <input asp-for="@Model.OrderDetails.Email" class="form-control" />
                        <span asp-validation-for="@Model.OrderDetails.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="OrderNow" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            }
            else
                     {
                         <div class="col-md-8">
                         <p>
                            You haven't selected any book.Please select a book to purchase before proceeding.
                             <a href="/">click here to go back to the list</a>
                        </p>
                         </div>
                     }
</div>
</div>

