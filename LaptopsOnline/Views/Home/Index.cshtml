@{
    
}
@Html.Partial("_Carousel",Model.Carousels)

<h2 class="text text-center">Laptop's List</h2>
<div class="container marketing">
	<div class="row">
		@foreach (var item in Model.Laptops)
		{
			<div class="col-lg-4">
				<img class="img img-rounded" src="~/Images/@item.Image" alt="@item.Brand" width="140">
				<h5>@item.Brand  @item.ModelName</h5>
				<p><a class="btn btn-secondary" href="/home/details/@item.Id" role="button">View details »</a></p>
			</div>
		}
	</div>
</div>

